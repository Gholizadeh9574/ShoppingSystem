<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_customerlist_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_customerlist_accountnametv"
            android:text="ACCOUNTNAME"
            android:gravity="right"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card_customerlist_fullnametv"
            android:text="FULLNAME"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/card_customerlist_IDtv"
                android:layout_marginTop="10dp"
                android:text="IDIDID"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </LinearLayout>

</android.support.v7.widget.CardView>