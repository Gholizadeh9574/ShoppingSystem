<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:gravity="center_horizontal"
    tools:context=".Admin_Panel">




    <Button
        android:id="@+id/ordersforconfirmbutton"
        android:text="سفارشات"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/waresforadminbutton"
        android:text="محصولات"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/adminaccountpanelbutton"
        android:text="ناحیه کاربری"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/customersforadminbutton"
        android:text="مشتریان"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/adminsbutton"
        android:text="مدیران"
        android:visibility="invisible"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:layout_width="200dp"
        android:layout_height="60dp" />


</LinearLayout>