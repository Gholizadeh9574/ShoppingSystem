<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/customerdetails_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDetails">

    <TextView
        android:id="@+id/customerdetails_accountnametv"
        android:text="ACCOUNT_NAME"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/customerdetails_fullnametv"
        android:text="FULLNAME"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/customerdetails_idtv"
        android:text="IDIDID"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/customerdetails_phonetv"
        android:text="PPPPPPP"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/customerdetails_addresstv"
        android:text="AAAAAA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/customerdetails_totalbuytv"
        android:text="BBBBB"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/customerdetails_isactiveswitch"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="فعال بودن "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>