<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/wareforcart_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/cardcolorfullstock"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/cuscart_remove"
        android:src="@drawable/remove_icon"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cuscart_quantity"
                android:text="mmmm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cuscart_warename"
                android:text="XXXX"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </GridLayout>
        <GridLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cuscart_sum"
                android:text="XXXX"
                android:textSize="16sp"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cuscart_price"
                android:text="XXX"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_marginRight="20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </GridLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>