<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewAdmin">

    <TextView
        android:id="@+id/newadmin_adminIDtv"
        android:text="IDIDID"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/newadmin_adminnametext"
            android:singleLine="true"
            android:maxLength="12"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="نام : "
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/newadmin_adminlastnametext"
            android:singleLine="true"
            android:maxLength="15"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="نام خانوادگی : "
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <EditText
        android:id="@+id/newadmin_passtext"
        android:layout_marginTop="20dp"
        android:inputType="numberPassword"
        android:singleLine="true"
        android:maxLength="8"
        android:gravity="center_horizontal"
        android:hint="رمز عبور"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/newadmin_repasstext"
        android:layout_marginTop="20dp"
        android:inputType="numberPassword"
        android:singleLine="true"
        android:maxLength="8"
        android:gravity="center_horizontal"
        android:hint="تکرار رمز عبور"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/newadmin_passerrortv"
        android:text="@string/entercorrctlyrepass"
        android:textSize="15dp"
        android:textColor="@color/textviewwarnning"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/newadmin_mainadminswitch"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="مدیر اصلی "
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/newadmin_saveadminbtn"
        android:text="ذخیره"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textgreen"
        android:background="@color/cardcolorfullstock"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />


</LinearLayout>